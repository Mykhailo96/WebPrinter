@model WP.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<div class="container">
    <div class="row">
        <br />
        <br />
        <br />
        <div class="col-md-8" style="margin-bottom: 10px">
            <h4>Hello @User.Identity.Name!</h4>
            <hr />
                <input type="button" value="Edit profile" class="btn primary" onclick="location.href='@Url.Action("EditProfile", "Manage")'" />
                <input type="button" value="Manage logins" class="btn primary" onclick="location.href='@Url.Action("ManageLogins", "Manage")'" />
                @if (Model.HasPassword)
                {
                    <input type="button" value="Change password" class="btn primary" onclick="location.href='@Url.Action("ChangePassword", "Manage")'" />
                }
                else
                {
                    <input type="button" value="Create password" class="btn primary" onclick="location.href='@Url.Action("SetPassword", "Manage")'" />
                }
                <input type="button" value="My purchases" class="btn primary" onclick="location.href='@Url.Action("Index", "Purchases")'" />
        </div>
    </div>
</div>