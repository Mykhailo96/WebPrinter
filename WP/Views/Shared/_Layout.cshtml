<!doctype html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/Content/img/favicon/favicon.ico" />
    <meta name="theme-color" content="#ffffff">

    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/normalize.min.css")
    @Styles.Render("~/Content/animate.min.css")
    @Styles.Render("~/Content/flickity.min.css")
    @Styles.Render("~/Content/styles.css")
    @Styles.Render("https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
</head>

<body>
    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="container-fluid">
        <div class="row">
            <div class="header-nav-wrapper">
                <div class="logo">
                    <a href="/"><img src="~/Content/img/wp-logo250x50.png" alt="Web Printer"></a>
                </div>
                <div class="primary-nav-wrapper">
                    <nav>
                        <ul class="primary-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            @{ if (User.Identity.Name == "Admin")
                               {
                                    <li>@Html.ActionLink("Print", "Index", "Purchases")</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Print", "Create", "Purchases")</li>
                                }
                            }
                            
                        </ul>
                    </nav>
                    <div class="secondary-nav-wrapper">
                        <ul class="secondary-nav">
                            <li>@Html.Partial("_LoginPartial")</li>

                        </ul>
                    </div>
                </div>
                <div class="navicon">
                    <a class="nav-toggle" href="#"><span></span></a>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <footer class="has-padding footer-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-branding">
                    <img class="footer-branding-logo" src="~/Content/img/wp-logo250x50.png" alt="Web printer">
                    <p>You come up with - we realize.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 footer-nav">
                    <ul class="footer-primary-nav">
                        <li><a href="#intro">How it works?</a></li>
                        <li><a href="#team">The Crew</a></li>
                        <li><a href="#articles">Gallery</a></li>
                        <li><a href="#freebies">Freebies</a></li>
                    </ul>
                    <ul class="footer-secondary-nav">
                        <li>&copy; @DateTime.Now.Year – Web Printer</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/Scripts/jquery-2.2.3.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.11.4.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/modernizr-2.8.3-respond-1.4.2.min.js")
    @Scripts.Render("~/Scripts/retina.min.js")
    @Scripts.Render("~/Scripts/jquery.waypoints.min.js")
    @Scripts.Render("~/Scripts/flickity.pkgd.min.js")
    @Scripts.Render("~/Scripts/scripts-min.js")
</body>

</html>
